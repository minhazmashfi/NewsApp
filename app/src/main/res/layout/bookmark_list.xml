<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#85C1E9"
    android:elevation="16dp"
    app:cardBackgroundColor="#9E1818"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image_book"
            android:layout_width="200dp"
            android:layout_height="200dp">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_book"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Title"
            android:textColor="#040404"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/description_book"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Description"
            android:textColor="#22211F"
            android:textSize="14sp"></TextView>
        <TextView
            android:id="@+id/seeMore_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="See more..."
            android:textColor="#1A237E"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Author"
            android:textColor="#CD5C5C"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/date_publish_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="0dp"
            android:text="published_date"
            android:textColor="#CD5C5C"
            android:textSize="16sp"></TextView>

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="5dp"
            android:background="#F88D06"
            app:srcCompat="@drawable/outline_delete" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>